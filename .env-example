# Переменные для подключения к PostgreSQL
POSTGRES_USER=app_user
POSTGRES_PASSWORD=app_pass
POSTGRES_DB=app_db
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres/${POSTGRES_DB}

# URL для подключения к RabbitMQ
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/%2F

# URL для подключения к Redis
REDIS_URL=redis://redis:6379/0

# URL вебхука Bitrix24 (замените на ваш)
BITRIX_WEBHOOK_URL=https://your-portal.bitrix24.ru/rest/1/your-webhook-code/

# Порт для API
API_PORT=8080

# Настройки для старого producer
REFETCH_INTERVAL_SEC=300
BATCH_PAUSE_SEC=0.2
HTTP_TIMEOUT_SEC=60
RETRIES=4
BACKOFF_BASE_SEC=0.6

# Настройки для consumer
TZ_NAME=Asia/Almaty
WEEKLY_RESET_DOW=1
WEEKLY_RESET_TIME=03:00
INACTIVE_DAYS=14
PREFETCH=32

# Имена очередей
QUEUE_USERS=bitrix.users.map
QUEUE_TASKS_EVENTS=bitrix.tasks.events
